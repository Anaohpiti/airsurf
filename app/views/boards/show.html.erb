<div class="container text-white rounded mt-5 pt-4">
    <div class="col pt-6 text-left">
        <%= link_to "<< Back to Boards", boards_path, class:"btn btn-lg btn-outline-light mb-3" %>
    </div>
  <div class="row">
    <div class="col text-center m-2" >
      <%#= cl_image_tag @board.photo.key, alt: "Picture of the board", height:400, class:"rounded m-2 p-3 rounded" ,style:"border-radius:4px" %>
    </div>

    <div class="col text-center m-4 rounded">
      <h1><%= @board.title %></h1>

      <% if @board.available?   %>
        <p class="text-danger"><strong>Available today ðŸ¤™ </strong></p>
      <% else %>
        <p class="text-danger"><strong>Not available!</strong></p>
      <% end  %>
      <div>
        <table class="table mt-2 text-white">
          <thead class="bg-primary text-white">
            <tr>
              <th scope="col">
                <% if @board.user.photo.attached? %>
                  <%#= cl_image_tag @board.user.photo.key, class: "avatar" %>
                <% else %>
                  <%= image_tag "default_avatar.png", class: "avatar" %>
                <% end %>
              </th>
              <th scope="col" class="align-middle">Check <%= @board.user.name.capitalize %>'s board</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">Brand</th>
              <td><%=@board.brand%></td>
            </tr>
            <tr>
              <th scope="row"><i class="fas fa-arrows-alt-v"></i></th>
              <td><%= @board.height %> ft (<%= @board.volume.to_i/100 %> l)</td>
            </tr>
            <tr>
              <th scope="row"><i class="far fa-heart"></i></th>
              <td><%= @board.condition %></td>
            </tr>
            <tr>
              <th scope="row"><i class="fas fa-map-marker-alt"></th>
              <td><%= @board.location %></td>
            </tr>
            <tr>
              <th scope="row"><i class="fas fa-euro-sign"></th>
              <td><%= @board.price_per_day/100 %> / day</td>
            </tr>
          </tbody>
        </table>

      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center ">

    <div class="col m-2 mb-3 p-8 text-left ">

      <%= render "rentals/form", rental: rentals_url %>
      <%#<%= link_to "Rent it!", new_board_rental_path(@board), class:"btn btn-lg btn-danger justify-content-self rounded" %>
    </div>
 </div>
</div>
